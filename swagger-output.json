{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "A simple API for CRUD operations on a MongoDb database",
    "version": "1.0.0"
  },
  "host": "https://project1-o08s.onrender.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api-docs": {
      "get": {
        "description": "Returns this page, made with swagger-autogen and swagger-ui-express.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/": {
      "get": {
        "description": "Index for testing",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/": {
      "get": {
        "description": "Gets all contacts from the MongoDb collection 'contacts'.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "description": "Gets a single contact.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/add": {
      "post": {
        "description": "Creates a new contact and adds it to the collection.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Smith"
                },
                "email": {
                  "example": "john.smith@example.com"
                },
                "favoriteColor": {
                  "example": "Blue"
                },
                "birthday": {
                  "example": "January 1"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/update/{id}": {
      "put": {
        "description": "Updates a specific contact.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "Jane"
                },
                "lastName": {
                  "example": "Doe"
                },
                "email": {
                  "example": "jane.doe@example.com"
                },
                "favoriteColor": {
                  "example": "Blue"
                },
                "birthday": {
                  "example": "December 31"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/delete/{id}": {
      "delete": {
        "description": "Deletes a specific contact.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}